<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textoInicio"
        android:layout_width="300dp"
        android:layout_height="87dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="188dp"
        android:fontFamily="@font/poppins"
        android:text="¡Sushi fresco directo a tu mesa!  Elige desde tu teléfono y disfruta… así de Oishi!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoAPP"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/logoAPP"
        android:layout_width="394dp"
        android:layout_height="348dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/botonSiguiente"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:backgroundTint="#FD8663"
        android:fontFamily="@font/poppins"
        android:onClick="botonInicio"
        android:text="Empezar"
        android:textSize="24sp"
        android:visibility="visible"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoInicio"
        app:layout_constraintVertical_bias="0.2"
        app:strokeColor="#EF6035"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>