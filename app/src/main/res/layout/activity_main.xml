<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/fondo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="612dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="152dp"
        android:text="¡Sushi fresco directo a tu mesa!  Elige desde tu teléfono y disfruta… así de Oishi!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonInicio"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="712dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="81dp"
        android:backgroundTint="#FD8663"
        android:shadowColor="#0B0A0A"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Empezar"
        android:textSize="24sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#EF6035"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>