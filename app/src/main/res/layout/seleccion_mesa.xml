<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seleccionMesa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".SeleccionMesa">

    <ImageView
        android:id="@+id/mesa2"
        android:layout_width="121dp"
        android:layout_height="83dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="434dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="334dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mesa2" />

    <ImageView
        android:id="@+id/mesa5"
        android:layout_width="91dp"
        android:layout_height="105dp"
        android:layout_marginStart="286dp"
        android:layout_marginTop="426dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mesa5" />

    <ImageView
        android:id="@+id/mesa1"
        android:layout_width="121dp"
        android:layout_height="83dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="447dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mesa1" />

    <ImageView
        android:id="@+id/mesa3"
        android:layout_width="121dp"
        android:layout_height="83dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="546dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="222dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mesa3" />

    <ImageView
        android:id="@+id/mesa4"
        android:layout_width="91dp"
        android:layout_height="105dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="426dp"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mesa4" />

    <ImageView
        android:id="@+id/atras"
        android:layout_width="27dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="339dp"
        android:layout_marginBottom="778dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/atras" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="155dp"
        android:layout_height="111dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textoExplicacion"
        android:layout_width="336dp"
        android:layout_height="79dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="612dp"
        android:fontFamily="@font/poppins"
        android:text="Antes de empezar, selecciona tu mesa para que te llevemos el sushi directo a ella!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonSiguiente"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="712dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="81dp"
        android:backgroundTint="#FD8663"
        android:fontFamily="@font/poppins"
        android:onClick="botonSiguiente"
        android:shadowColor="#0B0A0A"
        android:text="Siguiente"
        android:textSize="23sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#EF6035"
        app:strokeWidth="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>